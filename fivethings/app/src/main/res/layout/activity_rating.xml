<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="#0000"
    android:padding="16dp">

    <TextView
        android:text="Avalie o aplicativo para contribuir com melhorias"
        android:id="@+id/rank_dialog_text1"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:background="#0000"
        android:textColor="#ffefd5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <RatingBar
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:progressBackgroundTint="@color/white"
        android:progressTint="@color/yellow"
        android:secondaryProgressTint="@color/green"
        android:backgroundTint="#0000"
        android:id="@+id/dialog_ratingbar"
        android:layout_gravity="center"
        android:numStars="5"
        android:stepSize="1.0"
        android:rating="3"
        android:isIndicator="false"/>

    <Button
        android:id="@+id/rank_dialog_button"
        android:layout_height="50dp"
        android:text="Avaliar"
        android:focusable="false"
        android:background="#055d9d"
        android:layout_margin="5dip"
        android:textColor="#ffefd5"
        android:textSize="20sp"
        android:layout_width="fill_parent" />

    <TextView
        android:id="@+id/txtValorAvaliacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffefd5"
        android:textSize="18sp"
        android:text="" />

</LinearLayout>